    "git-contributor": "1",
    "husky": "^1.3.1",
    "ipv4": "1",
    "macaca-ecosystem": "*",
    "mocha": "*",
    "nyc": "^13.1.0",
    "vuepress": "^1.5.2"
  },
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text mocha",
